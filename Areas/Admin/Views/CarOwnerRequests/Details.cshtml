@model CarOwnerRequest
@{
    ViewData["Title"] = "Chi tiết yêu cầu làm chủ xe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">
            <i class="fas fa-car-alt"></i> Chi tiết yêu cầu làm chủ xe
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                @if (Model.Status == CarOwnerRequestStatus.Pending)
                {
                    <form asp-action="Approve" asp-route-id="@Model.CarOwnerRequestId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success btn-sm"
                                onclick="return confirm('Bạn có chắc muốn duyệt yêu cầu này?')">
                            <i class="fas fa-check"></i> Duyệt
                        </button>
                    </form>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal">
                        <i class="fas fa-times"></i> Từ chối
                    </button>
                }
            </div>
            <div class="btn-group">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <!-- Personal Information -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Họ và tên:</dt>
                        <dd class="col-sm-9"><strong>@Model.FullName</strong></dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Điện thoại:</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <dt class="col-sm-3">CCCD/CMND:</dt>
                        <dd class="col-sm-9"><code>@Model.NationalId</code></dd>

                        <dt class="col-sm-3">Địa chỉ:</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">User Account:</dt>
                        <dd class="col-sm-9">
                            @if (Model.User != null)
                            {
                                <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId">
                                    @Model.User.UserName
                                </a>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Rental Information -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Thông tin cho thuê</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Số xe dự kiến:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.ExpectedCarCount xe</span>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Experience))
                        {
                            <dt class="col-sm-4">Kinh nghiệm:</dt>
                            <dd class="col-sm-8">@Model.Experience</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-4">Ghi chú:</dt>
                            <dd class="col-sm-8">@Model.Notes</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Status Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-@(GetStatusColor(Model.Status)) text-white">
                    <h5 class="mb-0">Trạng thái</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        @switch (Model.Status)
                        {
                            case CarOwnerRequestStatus.Pending:
                                <i class="fas fa-clock fa-3x text-warning"></i>
                                <h4 class="mt-2 text-warning">Chờ duyệt</h4>
                                break;
                            case CarOwnerRequestStatus.Approved:
                                <i class="fas fa-check-circle fa-3x text-success"></i>
                                <h4 class="mt-2 text-success">Đã duyệt</h4>
                                break;
                            case CarOwnerRequestStatus.Rejected:
                                <i class="fas fa-times-circle fa-3x text-danger"></i>
                                <h4 class="mt-2 text-danger">Từ chối</h4>
                                break;
                        }
                    </div>

                    <dl class="mb-0">
                        <dt>Ngày gửi:</dt>
                        <dd>@Model.RequestedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.ProcessedAt.HasValue)
                        {
                            <dt>Ngày xử lý:</dt>
                            <dd>@Model.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }

                        @if (Model.Processor != null)
                        {
                            <dt>Người xử lý:</dt>
                            <dd>@Model.Processor.FullName</dd>
                        }
                    </dl>
                </div>
            </div>

            @if (Model.Status == CarOwnerRequestStatus.Rejected && !string.IsNullOrEmpty(Model.RejectionReason))
            {
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white">
                        <h6 class="mb-0">Lý do từ chối</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.RejectionReason</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Reject Modal -->
@if (Model.Status == CarOwnerRequestStatus.Pending)
{
    <div class="modal fade" id="rejectModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Từ chối yêu cầu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="Reject" asp-route-id="@Model.CarOwnerRequestId" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <p><strong>Người gửi:</strong> @Model.FullName</p>
                        <div class="mb-3">
                            <label for="reason" class="form-label">
                                Lý do từ chối <span class="text-danger">*</span>
                            </label>
                            <textarea name="reason" id="reason" class="form-control" rows="3" required
                                      placeholder="Nhập lý do từ chối..."></textarea>
                        </div>
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle"></i>
                            Người dùng sẽ thấy lý do này trong trang trạng thái yêu cầu.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i> Xác nhận từ chối
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@functions {
    private string GetStatusColor(CarOwnerRequestStatus status)
    {
        return status switch
        {
            CarOwnerRequestStatus.Pending => "warning",
            CarOwnerRequestStatus.Approved => "success",
            CarOwnerRequestStatus.Rejected => "danger",
            _ => "secondary"
        };
    }
}
