@model carrentalmvc.Models.Feature
@{
    ViewData["Title"] = $"Chỉnh sửa tính năng - {Model.Name}";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-edit"></i> Chỉnh sửa tính năng</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group">
            <a asp-action="Details" asp-route-id="@Model.FeatureId" class="btn btn-sm btn-outline-info">
                <i class="fas fa-eye"></i> Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Thông tin tính năng</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input asp-for="FeatureId" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Icon" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i id="icon-preview" class="@(Model.Icon ?? "fas fa-cog")"></i>
                            </span>
                            <input asp-for="Icon" class="form-control" id="icon-input" />
                        </div>
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.FeatureId" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">Xem trước</h6>
            </div>
            <div class="card-body text-center">
                <div id="feature-preview" class="p-3 border rounded">
                    <i id="preview-icon" class="@(Model.Icon ?? "fas fa-cog") fa-3x text-primary mb-2"></i>
                    <h6 id="preview-name">@Model.Name</h6>
                    <p id="preview-description" class="text-muted small">@(Model.Description ?? "Mô tả tính năng")</p>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Thông tin</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">#@Model.FeatureId</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Update preview when typing
            $('#Name').on('input', function() {
                $('#preview-name').text($(this).val() || '@Model.Name');
            });

            $('#Description').on('input', function() {
                $('#preview-description').text($(this).val() || '@(Model.Description ?? "Mô tả tính năng")');
            });

            $('#icon-input').on('input', function() {
                var iconClass = $(this).val() || '@(Model.Icon ?? "fas fa-cog")';
                $('#icon-preview').attr('class', iconClass);
                $('#preview-icon').attr('class', iconClass + ' fa-3x text-primary mb-2');
            });
        });
    </script>
}