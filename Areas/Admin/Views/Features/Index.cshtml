@model IEnumerable<carrentalmvc.Models.Feature>
@{
    ViewData["Title"] = "Quản lý tính năng xe";

    var searchTerm = ViewBag.SearchTerm as string;
    var pageNumber = ViewBag.PageNumber != null ? (int)ViewBag.PageNumber : 1;
    var totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
    var totalCount = ViewBag.TotalCount != null ? (int)ViewBag.TotalCount : Model.Count();
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-cogs"></i> Quản lý tính năng xe</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Create" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i> Thêm tính năng
            </a>
        </div>
    </div>
</div>

<!-- Search -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="searchTerm">Tìm kiếm</label>
                        <input name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm theo tên hoặc mô tả..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Features List -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Danh sách tính năng</h6>
            <span class="badge bg-primary">Tổng: @totalCount</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="row g-3 p-3">
                @foreach (var feature in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    @if (!string.IsNullOrEmpty(feature.Icon))
                                    {
                                        <i class="@feature.Icon fa-2x text-primary me-3"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-cog fa-2x text-muted me-3"></i>
                                    }
                                    <div>
                                        <h6 class="card-title mb-1">@feature.Name</h6>
                                        <small class="text-muted">ID: #@feature.FeatureId</small>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(feature.Description))
                                {
                                    <p class="card-text text-muted small">@feature.Description</p>
                                }

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">@feature.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@feature.FeatureId"
                                           class="btn btn-sm btn-outline-primary" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@feature.FeatureId"
                                           class="btn btn-sm btn-outline-secondary" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@feature.FeatureId"
                                           class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Features pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber - 1)" asp-route-searchTerm="@searchTerm">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i" asp-route-searchTerm="@searchTerm">@i</a>
                                </li>
                            }

                            <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber + 1)" asp-route-searchTerm="@searchTerm">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-cogs fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Không tìm thấy tính năng nào</h5>
                <p class="text-muted">Thử thay đổi điều kiện tìm kiếm hoặc tạo tính năng mới</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm tính năng đầu tiên
                </a>
            </div>
        }
    </div>
</div>