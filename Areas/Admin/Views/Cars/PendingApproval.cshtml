@using System.Linq
@model IEnumerable<carrentalmvc.Models.Car>
@{
    ViewData["Title"] = "Xe chờ duyệt";

    var pageNumber = ViewBag.PageNumber != null ? (int)ViewBag.PageNumber : 1;
    var totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
    var totalCount = ViewBag.TotalCount != null ? (int)ViewBag.TotalCount : Model.Count();
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-hourglass-half"></i> Xe chờ duyệt</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <span class="badge bg-warning fs-6">@totalCount xe chờ duyệt</span>
        </div>
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-list"></i> Tất cả xe
            </a>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Xe</th>
                            <th>Chủ xe</th>
                            <th>Thông tin</th>
                            <th>Giá thuê</th>
                            <th>Ngày đăng</th>
                            <th class="text-center" style="width: 200px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            var primaryImage = car.CarImages?.FirstOrDefault(img => img.IsPrimary)?.ImageUrl;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(primaryImage))
                                        {
                                            <img src="@primaryImage" alt="@car.Name" class="rounded me-3" width="60" height="45" style="object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 45px;">
                                                <i class="fas fa-car text-muted"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@car.Name</div>
                                            <small class="text-muted">@car.Brand?.Name - @car.Category?.Name</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@car.Owner?.FullName</div>
                                </td>
                                <td>
                                    <div>@car.Year - @car.Color</div>
                                    <small class="text-muted">
                                        @if (car.Seats.HasValue)
                                        {
                                            <span>@car.Seats chỗ</span>
                                        }
                                        @if (car.Transmission.HasValue)
                                        {
                                            <span> • @car.Transmission</span>
                                        }
                                        @if (car.FuelType.HasValue)
                                        {
                                            <span> • @car.FuelType</span>
                                        }
                                    </small>
                                </td>
                                <td>
                                    <div class="fw-bold text-success">@car.PricePerDay.ToString("N0") VNĐ/ngày</div>
                                    @if (car.PricePerHour.HasValue)
                                    {
                                        <small class="text-muted">@car.PricePerHour.Value.ToString("N0") VNĐ/giờ</small>
                                    }
                                </td>
                                <td>
                                    <div>@car.CreatedAt.ToString("dd/MM/yyyy")</div>
                                    <small class="text-muted">@car.CreatedAt.ToString("HH:mm")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@car.CarId" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <form asp-action="Approve" asp-route-id="@car.CarId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success" title="Duyệt xe"
                                                    onclick="return confirm('Bạn có chắc muốn duyệt xe này?')">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>

                                        <button type="button" class="btn btn-sm btn-danger" title="Từ chối"
                                                onclick="showRejectModal(@car.CarId, '@car.Name')">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav aria-label="Pending cars pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" asp-route-page="@(pageNumber - 1)">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>

                @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                {
                    <li class="page-item @(i == pageNumber ? "active" : "")">
                        <a class="page-link" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-route-page="@(pageNumber + 1)">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h5 class="text-muted">Không có xe nào chờ duyệt</h5>
            <p class="text-muted">Tất cả xe đã được xử lý.</p>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-list"></i> Xem tất cả xe
            </a>
        </div>
    </div>
}

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Từ chối xe</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn từ chối xe <strong id="carName"></strong>?</p>
                    <div class="mb-3">
                        <label for="rejectReason" class="form-label">Lý do từ chối <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="rejectReason" name="reason" rows="3"
                                  placeholder="Nhập lý do từ chối xe này..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Từ chối xe
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRejectModal(carId, carName) {
            document.getElementById('carName').textContent = carName;
            document.getElementById('rejectForm').action = '/Admin/Cars/Reject/' + carId;
            document.getElementById('rejectReason').value = '';

            const modal = new bootstrap.Modal(document.getElementById('rejectModal'));
            modal.show();
        }
    </script>
}