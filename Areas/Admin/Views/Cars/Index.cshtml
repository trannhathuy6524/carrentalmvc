@model IEnumerable<carrentalmvc.Models.Car>
@{
    ViewData["Title"] = "Quản lý xe";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-car"></i> Quản lý xe</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-download"></i> Xuất Excel
            </button>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="searchTerm">Tìm kiếm</label>
                        <input name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Tìm theo tên xe, biển số..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="brandId">Thương hiệu</label>
                        <select name="brandId" asp-items="ViewBag.Brands" class="form-select">
                            <option value="">Tất cả thương hiệu</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="categoryId">Loại xe</label>
                        <select name="categoryId" asp-items="ViewBag.Categories" class="form-select">
                            <option value="">Tất cả loại xe</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="minPrice">Giá từ</label>
                        <input name="minPrice" value="@ViewBag.MinPrice" class="form-control" placeholder="Từ..." type="number" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="maxPrice">Giá đến</label>
                        <input name="maxPrice" value="@ViewBag.MaxPrice" class="form-control" placeholder="Đến..." type="number" />
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary me-1">
                                <i class="fas fa-search"></i>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Cars List -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Danh sách xe</h6>
            <span class="badge bg-primary">Tổng: @ViewBag.TotalCount</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 100px;">Hình ảnh</th>
                            <th>Thông tin xe</th>
                            <th>Chủ xe</th>
                            <th>Giá thuê</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            var primaryImage = car.CarImages?.FirstOrDefault(img => img.IsPrimary);
                            <tr>
                                <td>
                                    @if (primaryImage != null && !string.IsNullOrEmpty(primaryImage.ImageUrl))
                                    {
                                        <img src="@primaryImage.ImageUrl" alt="@car.Name" class="rounded" width="80" height="60" style="object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 80px; height: 60px;">
                                            <i class="fas fa-car text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="fw-bold">@car.Name</div>
                                    <small class="text-muted">
                                        @car.Brand?.Name - @car.Category?.Name
                                        @if (!string.IsNullOrEmpty(car.LicensePlate))
                                        {
                                            <span class="badge bg-light text-dark ms-1">@car.LicensePlate</span>
                                        }
                                    </small>
                                    <br>
                                    <small class="text-muted">
                                        @car.Year • @car.Color • @car.Seats chỗ
                                    </small>
                                </td>
                                <td>
                                    <div>@car.Owner?.FullName</div>
                                </td>
                                <td>
                                    <div class="fw-bold text-success">@car.PricePerDay.ToString("N0") VNĐ/ngày</div>
                                    @if (car.PricePerHour.HasValue)
                                    {
                                        <small class="text-muted">@car.PricePerHour.Value.ToString("N0") VNĐ/giờ</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(GetCarStatusBadgeClass(car.Status))">
                                        @GetCarStatusText(car.Status)
                                    </span>
                                    <br>
                                    <span class="badge bg-@(car.IsActive ? "success" : "danger") mt-1">
                                        @(car.IsActive ? "Hoạt động" : "Không hoạt động")
                                    </span>
                                </td>
                                <td>
                                    <small>@car.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@car.CarId"
                                           class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                                    data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-h"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form asp-action="UpdateStatus" asp-route-id="@car.CarId" method="post" class="d-inline">
                                                        <input type="hidden" name="status" value="@(car.Status == carrentalmvc.Models.Enums.CarStatus.Available ? carrentalmvc.Models.Enums.CarStatus.PendingApproval : carrentalmvc.Models.Enums.CarStatus.Available)" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-@(car.Status == carrentalmvc.Models.Enums.CarStatus.Available ? "pause" : "play")"></i>
                                                            @(car.Status == carrentalmvc.Models.Enums.CarStatus.Available ? "Tạm dừng" : "Kích hoạt")
                                                        </button>
                                                    </form>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a asp-action="Delete" asp-route-id="@car.CarId" class="dropdown-item text-danger">
                                                        <i class="fas fa-trash"></i> Xóa
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Cars pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(ViewBag.PageNumber - 1)"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   asp-route-brandId="@ViewBag.BrandId"
                                   asp-route-categoryId="@ViewBag.CategoryId"
                                   asp-route-minPrice="@ViewBag.MinPrice"
                                   asp-route-maxPrice="@ViewBag.MaxPrice">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = Math.Max(1, ViewBag.PageNumber - 2); i <= Math.Min((int)ViewBag.TotalPages, ViewBag.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i"
                                       asp-route-searchTerm="@ViewBag.SearchTerm"
                                       asp-route-brandId="@ViewBag.BrandId"
                                       asp-route-categoryId="@ViewBag.CategoryId"
                                       asp-route-minPrice="@ViewBag.MinPrice"
                                       asp-route-maxPrice="@ViewBag.MaxPrice">@i</a>
                                </li>
                            }

                            <li class="page-item @(ViewBag.PageNumber >= ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(ViewBag.PageNumber + 1)"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   asp-route-brandId="@ViewBag.BrandId"
                                   asp-route-categoryId="@ViewBag.CategoryId"
                                   asp-route-minPrice="@ViewBag.MinPrice"
                                   asp-route-maxPrice="@ViewBag.MaxPrice">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-car fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Không tìm thấy xe nào</h5>
                <p class="text-muted">Thử thay đổi điều kiện tìm kiếm</p>
            </div>
        }
    </div>
</div>

@functions {
    private string GetCarStatusBadgeClass(carrentalmvc.Models.Enums.CarStatus status)
    {
        return status switch
        {
            carrentalmvc.Models.Enums.CarStatus.Available => "success",
            carrentalmvc.Models.Enums.CarStatus.Rented => "warning",
            carrentalmvc.Models.Enums.CarStatus.Maintenance => "danger",
            carrentalmvc.Models.Enums.CarStatus.PendingApproval => "secondary",
            _ => "secondary"
        };
    }

    private string GetCarStatusText(carrentalmvc.Models.Enums.CarStatus status)
    {
        return status switch
        {
            carrentalmvc.Models.Enums.CarStatus.Available => "Sẵn sàng",
            carrentalmvc.Models.Enums.CarStatus.Rented => "Đang thuê",
            carrentalmvc.Models.Enums.CarStatus.Maintenance => "Bảo trì",
            carrentalmvc.Models.Enums.CarStatus.PendingApproval => "Chờ duyệt",
            _ => "Không xác định"
        };
    }
}