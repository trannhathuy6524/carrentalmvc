@using carrentalmvc.Models
@using carrentalmvc.Models.Enums
@model IEnumerable<PaymentDistribution>
@{
    ViewData["Title"] = "Quản lý Phân phối Thanh toán";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    var status = ViewBag.Status as PaymentDistributionStatus?;
    var recipientType = ViewBag.RecipientType as RecipientType?;
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
    var pageNumber = ViewBag.PageNumber ?? 1;
    var pageSize = ViewBag.PageSize ?? 20;
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalPages = ViewBag.TotalPages ?? 0;
    var hasPreviousPage = ViewBag.HasPreviousPage ?? false;
    var hasNextPage = ViewBag.HasNextPage ?? false;

    var totalAmount = ViewBag.TotalAmount ?? 0m;
    var platformAmount = ViewBag.PlatformAmount ?? 0m;
    var ownerAmount = ViewBag.OwnerAmount ?? 0m;
    var driverAmount = ViewBag.DriverAmount ?? 0m;

    var getStatusText = ViewBag.GetStatusText as Func<PaymentDistributionStatus, string>;
    var getRecipientTypeText = ViewBag.GetRecipientTypeText as Func<RecipientType, string>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-share-alt me-2"></i>Quản lý Phân phối Thanh toán</h2>
        <div>
            <a asp-action="Statistics" class="btn btn-info">
                <i class="fas fa-chart-bar me-2"></i>Thống kê
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Tổng số tiền</h5>
                    <h3 class="text-primary">@totalAmount.ToString("N0") VNĐ</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Nền tảng</h5>
                    <h3 class="text-success">@platformAmount.ToString("N0") VNĐ</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Chủ xe</h5>
                    <h3 class="text-info">@ownerAmount.ToString("N0") VNĐ</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Tài xế</h5>
                    <h3 class="text-warning">@driverAmount.ToString("N0") VNĐ</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Bộ lọc</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="@((int)PaymentDistributionStatus.Pending)" selected="@(status == PaymentDistributionStatus.Pending)">Chờ xử lý</option>
                            <option value="@((int)PaymentDistributionStatus.Processing)" selected="@(status == PaymentDistributionStatus.Processing)">Đang xử lý</option>
                            <option value="@((int)PaymentDistributionStatus.Completed)" selected="@(status == PaymentDistributionStatus.Completed)">Đã hoàn thành</option>
                            <option value="@((int)PaymentDistributionStatus.Failed)" selected="@(status == PaymentDistributionStatus.Failed)">Thất bại</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Loại người nhận</label>
                        <select name="recipientType" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="@((int)RecipientType.Platform)" selected="@(recipientType == RecipientType.Platform)">Nền tảng</option>
                            <option value="@((int)RecipientType.CarOwner)" selected="@(recipientType == RecipientType.CarOwner)">Chủ xe</option>
                            <option value="@((int)RecipientType.Driver)" selected="@(recipientType == RecipientType.Driver)">Tài xế</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Từ ngày</label>
                        <input type="date" name="startDate" value="@startDate?.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Đến ngày</label>
                        <input type="date" name="endDate" value="@endDate?.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i>Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Distributions Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                Danh sách phân phối
                <span class="badge bg-secondary">@totalCount phân phối</span>
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Payment</th>
                                <th>Người nhận</th>
                                <th>Loại</th>
                                <th>Số tiền</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var distribution in Model)
                            {
                                var statusClass = distribution.Status switch
                                {
                                    PaymentDistributionStatus.Pending => "warning",
                                    PaymentDistributionStatus.Processing => "info",
                                    PaymentDistributionStatus.Completed => "success",
                                    PaymentDistributionStatus.Failed => "danger",
                                    _ => "secondary"
                                };

                                var typeClass = distribution.RecipientType switch
                                {
                                    RecipientType.Platform => "success",
                                    RecipientType.CarOwner => "info",
                                    RecipientType.Driver => "warning",
                                    _ => "secondary"
                                };

                                <tr>
                                    <td><strong>#@distribution.PaymentDistributionId</strong></td>
                                    <td>
                                        <a href="@Url.Action("Details", "Payments", new { id = distribution.PaymentId })">
                                            Payment #@distribution.PaymentId
                                        </a>
                                    </td>
                                    <td>
                                        @if (distribution.RecipientType == RecipientType.Platform)
                                        {
                                            <span class="badge bg-success">PLATFORM</span>
                                        }
                                        else
                                        {
                                            <span>@(distribution.Recipient?.FullName ?? distribution.RecipientId)</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@typeClass">
                                            @(getRecipientTypeText?.Invoke(distribution.RecipientType) ?? distribution.RecipientType.ToString())
                                        </span>
                                    </td>
                                    <td><strong class="text-primary">@distribution.Amount.ToString("N0") VNĐ</strong></td>
                                    <td>
                                        <span class="badge bg-@statusClass">
                                            @(getStatusText?.Invoke(distribution.Status) ?? distribution.Status.ToString())
                                        </span>
                                    </td>
                                    <td>@distribution.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@distribution.PaymentDistributionId" 
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-status="@status"
                                   asp-route-recipientType="@recipientType"
                                   asp-route-startDate="@startDate"
                                   asp-route-endDate="@endDate"
                                   asp-route-page="@(pageNumber - 1)"
                                   asp-route-pageSize="@pageSize">
                                    Trước
                                </a>
                            </li>

                            @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-status="@status"
                                       asp-route-recipientType="@recipientType"
                                       asp-route-startDate="@startDate"
                                       asp-route-endDate="@endDate"
                                       asp-route-page="@i"
                                       asp-route-pageSize="@pageSize">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-status="@status"
                                   asp-route-recipientType="@recipientType"
                                   asp-route-startDate="@startDate"
                                   asp-route-endDate="@endDate"
                                   asp-route-page="@(pageNumber + 1)"
                                   asp-route-pageSize="@pageSize">
                                    Sau
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không có phân phối nào</p>
                </div>
            }
        </div>
    </div>
</div>
