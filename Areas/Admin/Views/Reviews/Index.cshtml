
@model IEnumerable<carrentalmvc.Models.Review>
@{
    ViewData["Title"] = "Quản lý đánh giá";

    // Filters & pagination from ViewBag
    var searchTerm = ViewBag.SearchTerm as string ?? string.Empty;
    var rating = ViewBag.Rating as int?;
    var isActive = ViewBag.IsActive as bool?;
    var isRecommended = ViewBag.IsRecommended as bool?;

    var pageNumber = ViewBag.PageNumber != null ? (int)ViewBag.PageNumber : 1;
    var totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
    var totalCount = ViewBag.TotalCount != null ? (int)ViewBag.TotalCount : Model.Count();
    var averageRating = ViewBag.AverageRating != null ? (double)ViewBag.AverageRating : 0.0;
    var totalReviewsCount = ViewBag.TotalReviewsCount != null ? (int)ViewBag.TotalReviewsCount : 0;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-star"></i> Quản lý đánh giá</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <span class="badge bg-info fs-6 me-2">
                Đánh giá TB: @averageRating.ToString("F1") ⭐
            </span>
            <span class="badge bg-primary fs-6">
                Tổng: @totalReviewsCount đánh giá
            </span>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="searchTerm">Tìm kiếm</label>
                        <input name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm theo tên xe, người đánh giá..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="rating">Đánh giá</label>
                        <select name="rating" class="form-select">
                            <option value="">Tất cả đánh giá</option>
                            @{
                                var ratings = new[] { 5, 4, 3, 2, 1 };
                            }
                            @foreach (var r in ratings)
                            {
                                var stars = new string('⭐', r);
                                if (rating.HasValue && rating.Value == r)
                                {
                                    <option value="@r" selected="selected">@r sao @stars</option>
                                }
                                else
                                {
                                    <option value="@r">@r sao @stars</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="isActive">Trạng thái</label>
                        <select name="isActive" class="form-select">
                            <option value="">Tất cả</option>
                            @if (isActive.HasValue && isActive.Value)
                            {
                                <option value="true" selected="selected">Đang hiển thị</option>
                            }
                            else
                            {
                                <option value="true">Đang hiển thị</option>
                            }
                            @if (isActive.HasValue && !isActive.Value)
                            {
                                <option value="false" selected="selected">Đã ẩn</option>
                            }
                            else
                            {
                                <option value="false">Đã ẩn</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="isRecommended">Khuyến nghị</label>
                        <select name="isRecommended" class="form-select">
                            <option value="">Tất cả</option>
                            @if (isRecommended.HasValue && isRecommended.Value)
                            {
                                <option value="true" selected="selected">Có khuyến nghị</option>
                            }
                            else
                            {
                                <option value="true">Có khuyến nghị</option>
                            }
                            @if (isRecommended.HasValue && !isRecommended.Value)
                            {
                                <option value="false" selected="selected">Không khuyến nghị</option>
                            }
                            else
                            {
                                <option value="false">Không khuyến nghị</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Xóa bộ lọc
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Reviews List -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Danh sách đánh giá</h6>
            <span class="badge bg-primary">Tổng: @totalCount</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            @foreach (var review in Model)
            {
                var userName = review.User?.FullName ?? "N/A";
                var userAvatar = review.User?.Avatar;
                var carName = review.Car?.Name ?? "N/A";

                <div class="border-bottom p-3">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="d-flex align-items-start">
                                @if (!string.IsNullOrEmpty(userAvatar))
                                {
                                    <img src="@userAvatar" alt="Avatar" class="rounded-circle me-3" width="50" height="50">
                                }
                                else
                                {
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-2">
                                        <h6 class="mb-0 me-2">@userName</h6>
                                        <div class="text-warning me-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star@(i <= review.Rating ? "" : " text-muted")"></i>
                                            }
                                        </div>
                                        <span class="badge bg-@(review.Rating >= 4 ? "success" : review.Rating >= 3 ? "warning" : "danger")">
                                            @review.Rating sao
                                        </span>
                                        @if (review.IsRecommended)
                                        {
                                            <span class="badge bg-info ms-1">Khuyến nghị</span>
                                        }
                                    </div>
                                    <p class="text-muted mb-1">Đánh giá cho: <strong>@carName</strong></p>
                                    @if (!string.IsNullOrEmpty(review.Comment))
                                    {
                                        <p class="mb-0">"@review.Comment"</p>
                                    }
                                    <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex justify-content-end align-items-center h-100">
                                <div class="me-3">
                                    <span class="badge bg-@(review.IsActive ? "success" : "secondary")">
                                        @(review.IsActive ? "Đang hiển thị" : "Đã ẩn")
                                    </span>
                                </div>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@review.ReviewId"
                                       class="btn btn-sm btn-outline-primary" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    @if (review.IsActive)
                                    {
                                        <form asp-action="Deactivate" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Ẩn đánh giá"
                                                    onclick="return confirm('Bạn có chắc muốn ẩn đánh giá này?')">
                                                <i class="fas fa-eye-slash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Activate" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Hiển thị đánh giá"
                                                    onclick="return confirm('Bạn có chắc muốn hiển thị đánh giá này?')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </form>
                                    }

                                    <a asp-action="Delete" asp-route-id="@review.ReviewId"
                                       class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Reviews pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber - 1)"
                                   asp-route-searchTerm="@searchTerm"
                                   asp-route-rating="@rating"
                                   asp-route-isActive="@isActive"
                                   asp-route-isRecommended="@isRecommended">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i"
                                       asp-route-searchTerm="@searchTerm"
                                       asp-route-rating="@rating"
                                       asp-route-isActive="@isActive"
                                       asp-route-isRecommended="@isRecommended">@i</a>
                                </li>
                            }

                            <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber + 1)"
                                   asp-route-searchTerm="@searchTerm"
                                   asp-route-rating="@rating"
                                   asp-route-isActive="@isActive"
                                   asp-route-isRecommended="@isRecommended">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-star fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Không tìm thấy đánh giá nào</h5>
                <p class="text-muted">Thử thay đổi điều kiện tìm kiếm</p>
            </div>
        }
    </div>
</div>