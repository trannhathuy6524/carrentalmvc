@model carrentalmvc.Models.Review
@{
    ViewData["Title"] = $"Chi tiết đánh giá - #{Model.ReviewId}";

    var userName = Model.User?.FullName ?? "N/A";
    var userAvatar = Model.User?.Avatar;
    var carName = Model.Car?.Name ?? "N/A";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-star"></i> Chi tiết đánh giá</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            @if (Model.IsActive)
            {
                <form asp-action="Deactivate" asp-route-id="@Model.ReviewId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-warning"
                            onclick="return confirm('Bạn có chắc muốn ẩn đánh giá này?')">
                        <i class="fas fa-eye-slash"></i> Ẩn đánh giá
                    </button>
                </form>
            }
            else
            {
                <form asp-action="Activate" asp-route-id="@Model.ReviewId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-success"
                            onclick="return confirm('Bạn có chắc muốn hiển thị đánh giá này?')">
                        <i class="fas fa-eye"></i> Hiển thị đánh giá
                    </button>
                </form>
            }
            <a asp-action="Delete" asp-route-id="@Model.ReviewId" class="btn btn-sm btn-danger ms-2">
                <i class="fas fa-trash"></i> Xóa
            </a>
        </div>
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Nội dung đánh giá</h6>
                    <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                        @(Model.IsActive ? "Đang hiển thị" : "Đã ẩn")
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-start mb-4">
                    @if (!string.IsNullOrEmpty(userAvatar))
                    {
                        <img src="@userAvatar" alt="Avatar" class="rounded-circle me-3" width="60" height="60">
                    }
                    else
                    {
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-user fa-2x text-white"></i>
                        </div>
                    }
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-2">
                            <h5 class="mb-0 me-3">@userName</h5>
                            <div class="text-warning me-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star@(i <= Model.Rating ? "" : " text-muted") fa-lg"></i>
                                }
                            </div>
                            <span class="badge bg-@(Model.Rating >= 4 ? "success" : Model.Rating >= 3 ? "warning" : "danger") fs-6">
                                @Model.Rating sao
                            </span>
                            @if (Model.IsRecommended)
                            {
                                <span class="badge bg-info ms-2 fs-6">
                                    <i class="fas fa-thumbs-up"></i> Khuyến nghị
                                </span>
                            }
                        </div>
                        <p class="text-muted mb-2">
                            Đánh giá cho xe: <strong>@carName</strong>
                        </p>
                        <small class="text-muted">
                            <i class="fas fa-clock"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Comment))
                {
                    <div class="bg-light p-3 rounded">
                        <h6><i class="fas fa-quote-left"></i> Bình luận:</h6>
                        <p class="mb-0 fst-italic">"@Model.Comment"</p>
                    </div>
                }
                else
                {
                    <div class="bg-light p-3 rounded text-center text-muted">
                        <i class="fas fa-comment-slash fa-2x mb-2"></i>
                        <p class="mb-0">Không có bình luận</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">Thông tin đánh giá</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-5">Mã đánh giá:</dt>
                    <dd class="col-7">#@Model.ReviewId</dd>

                    <dt class="col-5">Đánh giá:</dt>
                    <dd class="col-7">
                        <span class="badge bg-@(Model.Rating >= 4 ? "success" : Model.Rating >= 3 ? "warning" : "danger")">
                            @Model.Rating/5 sao
                        </span>
                    </dd>

                    <dt class="col-5">Khuyến nghị:</dt>
                    <dd class="col-7">
                        @if (Model.IsRecommended)
                        {
                            <span class="text-success"><i class="fas fa-check"></i> Có</span>
                        }
                        else
                        {
                            <span class="text-muted"><i class="fas fa-times"></i> Không</span>
                        }
                    </dd>

                    <dt class="col-5">Trạng thái:</dt>
                    <dd class="col-7">
                        <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                            @(Model.IsActive ? "Hiển thị" : "Đã ẩn")
                        </span>
                    </dd>

                    <dt class="col-5">Ngày tạo:</dt>
                    <dd class="col-7">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.UpdatedAt > Model.CreatedAt)
                    {
                        <dt class="col-5">Cập nhật:</dt>
                        <dd class="col-7">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Thao tác</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.IsActive)
                    {
                        <form asp-action="Deactivate" asp-route-id="@Model.ReviewId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning w-100"
                                    onclick="return confirm('Bạn có chắc muốn ẩn đánh giá này?')">
                                <i class="fas fa-eye-slash"></i> Ẩn đánh giá
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate" asp-route-id="@Model.ReviewId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100"
                                    onclick="return confirm('Bạn có chắc muốn hiển thị đánh giá này?')">
                                <i class="fas fa-eye"></i> Hiển thị đánh giá
                            </button>
                        </form>
                    }

                    <hr />

                    <a asp-action="Delete" asp-route-id="@Model.ReviewId" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Xóa đánh giá
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>