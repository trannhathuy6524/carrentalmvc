@using carrentalmvc.Models.Enums
@model carrentalmvc.Models.Model3DTemplate
@{
    ViewData["Title"] = "Thêm mô hình 3D";

    // initial preview values (fall back to empty/new)
    var initialPreviewImage = Model?.PreviewImageUrl;
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-cube"></i> Thêm mô hình 3D</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Thông tin mô hình 3D</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên mô hình 3D" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết về mô hình 3D"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- 3D Model File Upload Section -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-cube"></i> File mô hình 3D
                                <span class="badge bg-danger">Bắt buộc</span>
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label for="modelFile" class="form-label">Tải lên file mô hình 3D</label>
                                        <input type="file" id="modelFile" name="modelFile" class="form-control"
                                               accept=".glb,.gltf,.obj,.fbx" />
                                        <div class="form-text">
                                            <i class="fas fa-info-circle text-info"></i>
                                            Định dạng hỗ trợ: GLB, GLTF, OBJ, FBX - Tối đa 100MB
                                        </div>
                                        <div id="modelFileInfo" class="mt-2"></div>
                                    </div>

                                    <div class="text-center my-2">
                                        <span class="text-muted">hoặc</span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="modelUrl" class="form-label">URL mô hình 3D</label>
                                        <input type="text" id="modelUrl" name="modelUrl" class="form-control" placeholder="https://example.com/model.glb" />
                                        <div class="form-text">Nhập URL trực tiếp nếu không muốn tải lên file</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="FileFormat" class="form-label">Định dạng file</label>
                                        <select asp-for="FileFormat" class="form-select" id="fileFormatSelect"
                                                asp-items="@(Html.GetEnumSelectList<FileFormat>())">
                                            <option value="">Chọn định dạng</option>
                                        </select>
                                        <span asp-validation-for="FileFormat" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="fileSize" class="form-label">Kích thước file</label>
                                        <input type="number" id="fileSize" name="fileSize" class="form-control" placeholder="Kích thước (bytes)" readonly />
                                        <div class="form-text">Sẽ tự động cập nhật khi chọn file</div>
                                    </div>

                                    <div class="alert alert-warning small">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        <strong>Lưu ý:</strong> Bạn phải chọn một trong hai: Upload file hoặc nhập URL
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Preview Image Upload Section -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-image"></i> Ảnh đại diện
                                <span class="badge bg-info">Khuyến nghị</span>
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group mb-3">
                                        <label for="previewImageFile" class="form-label">Tải lên ảnh đại diện</label>
                                        <input type="file" id="previewImageFile" name="previewImageFile" class="form-control" accept="image/*" />
                                        <div class="form-text">
                                            <i class="fas fa-info-circle text-info"></i>
                                            Kích thước khuyến nghị: 400x300px, định dạng: JPG, PNG, tối đa 5MB
                                        </div>
                                    </div>

                                    <div class="text-center my-2">
                                        <span class="text-muted">hoặc</span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="previewImageUrl" class="form-label">URL ảnh đại diện</label>
                                        <input type="text" id="previewImageUrl" name="previewImageUrl" class="form-control" placeholder="https://example.com/preview.jpg" />
                                        <div class="form-text">Nhập URL trực tiếp nếu không muốn tải lên</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="preview-container">
                                        <label class="form-label">Xem trước</label>
                                        <div id="imagePreview" class="border rounded p-3 text-center" style="height: 150px; background: #f8f9fa;">
                                            @if (!string.IsNullOrEmpty(initialPreviewImage))
                                            {
                                                <img src="@initialPreviewImage" alt="Preview" class="img-fluid rounded" style="max-height: 140px;" />
                                            }
                                            else
                                            {
                                                <i class="fas fa-image fa-2x text-muted mb-2"></i>
                                                <div class="text-muted small">Chọn ảnh để xem trước</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="BrandId" class="form-label"></label>
                                <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-select">
                                    <option value="">Không chọn thương hiệu</option>
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="CategoryId" class="form-label"></label>
                                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                    <option value="">Không chọn loại xe</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check mt-4 pt-2">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">
                                    Kích hoạt mô hình 3D
                                </label>
                                <div class="form-text">Mô hình 3D sẽ có thể được sử dụng bởi chủ xe</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">Hủy</a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="fas fa-save"></i> Tạo mô hình 3D
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb"></i> Hướng dẫn
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Quan trọng:</h6>
                    <ul class="mb-0">
                        <li><strong>Upload file</strong> sẽ lưu trữ trên server</li>
                        <li><strong>URL trực tiếp</strong> sẽ dẫn đến nguồn bên ngoài</li>
                        <li><strong>Ảnh đại diện</strong> hiển thị trong danh sách</li>
                        <li><strong>Mô hình 3D</strong> chỉ hiển thị khi xem chi tiết</li>
                    </ul>
                </div>

                <div class="mt-3">
                    <h6>Định dạng hỗ trợ:</h6>
                    <ul class="list-unstyled">
                        <li><span class="badge bg-success me-2">GLB</span> Tương tác 3D + AR</li>
                        <li><span class="badge bg-success me-2">GLTF</span> Tương tác 3D + AR</li>
                        <li><span class="badge bg-warning me-2">OBJ</span> Chỉ ảnh đại diện</li>
                        <li><span class="badge bg-warning me-2">FBX</span> Chỉ ảnh đại diện</li>
                    </ul>
                </div>

                <div class="mt-3">
                    <h6>Kích thước khuyến nghị:</h6>
                    <ul class="list-unstyled small">
                        <li><strong>Ảnh đại diện:</strong> 400x300px</li>
                        <li><strong>Mô hình 3D:</strong> &lt; 100MB</li>
                        <li><strong>Định dạng ảnh:</strong> JPG, PNG</li>
                    </ul>
                </div>

                <div class="mt-3">
                    <h6>Lợi ích upload file:</h6>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-check text-success me-1"></i> Kiểm soát hoàn toàn</li>
                        <li><i class="fas fa-check text-success me-1"></i> Không phụ thuộc nguồn ngoài</li>
                        <li><i class="fas fa-check text-success me-1"></i> Tốc độ tải ổn định</li>
                        <li><i class="fas fa-check text-success me-1"></i> Bảo mật cao hơn</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Helper to set enum value (use numeric enum values)
        const glbVal = '@((int)FileFormat.GLB)';
        const gltfVal = '@((int)FileFormat.GLTF)';
        const objVal = '@((int)FileFormat.OBJ)';
        const fbxVal = '@((int)FileFormat.FBX)';

        // Handle 3D model file upload
        const modelFileEl = document.getElementById('modelFile');
        if (modelFileEl) {
            modelFileEl.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    // Update file size field
                    const fileSizeInput = document.getElementById('fileSize');
                    if (fileSizeInput) fileSizeInput.value = file.size;

                    // Auto-detect format from file extension
                    const extension = file.name.split('.').pop().toLowerCase();
                    const formatSelect = document.getElementById('fileFormatSelect');

                    switch (extension) {
                        case 'glb': formatSelect.value = glbVal; break;
                        case 'gltf': formatSelect.value = gltfVal; break;
                        case 'obj': formatSelect.value = objVal; break;
                        case 'fbx': formatSelect.value = fbxVal; break;
                    }

                    // Show file info
                    const fileSize = (file.size / (1024 * 1024)).toFixed(2);
                    const infoEl = document.getElementById('modelFileInfo');
                    if (infoEl) infoEl.innerHTML =
                        '<div class="alert alert-success small">' +
                        '<i class="fas fa-file-alt me-1"></i> ' +
                        '<strong>' + file.name + '</strong><br>' +
                        'Kích thước: ' + fileSize + ' MB<br>' +
                        'Định dạng: ' + extension.toUpperCase() +
                        '</div>';

                    // Clear URL input when file is selected
                    const urlInput = document.getElementById('modelUrl');
                    if (urlInput) urlInput.value = '';

                    // Validate file size (100MB limit)
                    if (file.size > 100 * 1024 * 1024) {
                        if (infoEl) infoEl.innerHTML =
                            '<div class="alert alert-danger small">' +
                            '<i class="fas fa-exclamation-triangle me-1"></i> File quá lớn! Vui lòng chọn file dưới 100MB.' +
                            '</div>';
                        modelFileEl.value = '';
                        if (fileSizeInput) fileSizeInput.value = '';
                        return;
                    }
                }
            });
        }

        // Handle model URL input
        const modelUrlEl = document.getElementById('modelUrl');
        if (modelUrlEl) {
            modelUrlEl.addEventListener('input', function() {
                const url = this.value;
                if (url) {
                    const modelFile = document.getElementById('modelFile');
                    if (modelFile) {
                        modelFile.value = '';
                        const infoEl = document.getElementById('modelFileInfo');
                        if (infoEl) infoEl.innerHTML = '';
                        const fileSizeInput = document.getElementById('fileSize');
                        if (fileSizeInput) fileSizeInput.value = '';
                    }

                    const extension = url.split('.').pop().toLowerCase();
                    const formatSelect = document.getElementById('fileFormatSelect');
                    switch (extension) {
                        case 'glb': formatSelect.value = glbVal; break;
                        case 'gltf': formatSelect.value = gltfVal; break;
                        case 'obj': formatSelect.value = objVal; break;
                        case 'fbx': formatSelect.value = fbxVal; break;
                    }
                }
            });
        }

        // Preview uploaded image
        const previewFileEl = document.getElementById('previewImageFile');
        if (previewFileEl) {
            previewFileEl.addEventListener('change', function() {
                const file = this.files[0];
                if (!file) return;
                if (file.size > 5 * 1024 * 1024) {
                    alert('File ảnh quá lớn! Vui lòng chọn file dưới 5MB.');
                    this.value = '';
                    return;
                }
                const reader = new FileReader();
                reader.onload = function(e) {
                    const imagePreview = document.getElementById('imagePreview');
                    if (imagePreview) imagePreview.innerHTML =
                        '<img src="' + e.target.result + '" class="img-fluid rounded" style="max-height: 140px; object-fit: cover;">';
                };
                reader.readAsDataURL(file);

                // Clear URL input when file is selected
                const previewUrlInput = document.getElementById('previewImageUrl');
                if (previewUrlInput) previewUrlInput.value = '';
            });
        }

        // Preview URL image
        const previewUrlEl = document.getElementById('previewImageUrl');
        if (previewUrlEl) {
            previewUrlEl.addEventListener('input', function() {
                const url = this.value;
                if (!url) return;
                const img = new Image();
                img.onload = function() {
                    const imagePreview = document.getElementById('imagePreview');
                    if (imagePreview) imagePreview.innerHTML =
                        '<img src="' + url + '" class="img-fluid rounded" style="max-height: 140px; object-fit: cover;">';
                };
                img.onerror = function() {
                    const imagePreview = document.getElementById('imagePreview');
                    if (imagePreview) imagePreview.innerHTML =
                        '<i class="fas fa-exclamation-triangle fa-2x text-warning mb-2"></i><div class="text-warning small">URL ảnh không hợp lệ</div>';
                };
                img.src = url;

                // Clear file input when URL is entered
                const previewFileInput = document.getElementById('previewImageFile');
                if (previewFileInput) previewFileInput.value = '';
            });
        }

        // Form validation before submit
        const formEl = document.querySelector('form');
        if (formEl) {
            formEl.addEventListener('submit', function(e) {
                const modelUrl = document.getElementById('modelUrl').value;
                const modelFile = document.getElementById('modelFile').files[0];

                if (!modelUrl && !modelFile) {
                    e.preventDefault();
                    alert('Vui lòng chọn file mô hình 3D hoặc nhập URL mô hình 3D!');
                    return false;
                }

                // Show loading state
                const submitBtn = document.getElementById('submitBtn');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang tải lên...';
                    submitBtn.disabled = true;
                }
            });
        }
    </script>
}