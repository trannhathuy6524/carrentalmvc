@using carrentalmvc.Models
@model Brand

@{
    ViewData["Title"] = $"Chỉnh sửa thương hiệu - {Model?.Name}";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-edit"></i> Chỉnh sửa thương hiệu</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group">
            <a asp-action="Details" asp-route-id="@Model?.BrandId" class="btn btn-sm btn-outline-info">
                <i class="fas fa-eye"></i> Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Thông tin thương hiệu</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input asp-for="BrandId" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LogoUrl" class="form-label"></label>
                        <input asp-for="LogoUrl" class="form-control" id="logo-input" />
                        <span asp-validation-for="LogoUrl" class="text-danger"></span>
                        <div class="form-text">URL hình ảnh logo của thương hiệu</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model?.BrandId" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">Xem trước logo</h6>
            </div>
            <div class="card-body text-center">
                <div id="logo-preview" class="p-3 border rounded">
                    <img id="preview-image" src="@Model?.LogoUrl" alt="Logo preview" class="img-fluid rounded"
                         style="max-width: 150px; max-height: 150px; @(string.IsNullOrEmpty(Model?.LogoUrl) ? "display: none;" : "")" />
                    <div id="preview-placeholder" class="bg-light d-flex align-items-center justify-content-center rounded"
                         style="width: 150px; height: 150px; margin: 0 auto; @(string.IsNullOrEmpty(Model?.LogoUrl) ? "" : "display: none;")">
                        <i class="fas fa-image fa-3x text-muted"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Thông tin</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">#@Model?.BrandId</dd>
                </dl>

                <div class="alert alert-warning">
                    <h6><i class="fas fa-exclamation-triangle"></i> Cảnh báo</h6>
                    <p class="mb-0">Việc thay đổi tên thương hiệu có thể ảnh hưởng đến các xe đã được phân loại.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Logo preview
            $('#logo-input').on('input', function() {
                var logoUrl = $(this).val().trim();
                var $previewImage = $('#preview-image');
                var $placeholder = $('#preview-placeholder');

                if (logoUrl && isValidUrl(logoUrl)) {
                    $previewImage.attr('src', logoUrl).show();
                    $placeholder.hide();

                    // Handle image load error (unbind previous to avoid multiple handlers)
                    $previewImage.off('error').on('error', function() {
                        $(this).hide();
                        $placeholder.show();
                    });
                } else {
                    $previewImage.hide();
                    $placeholder.show();
                }
            });

            function isValidUrl(string) {
                try {
                    new URL(string);
                    return true;
                } catch (_) {
                    return false;
                }
            }
        });
    </script>
}