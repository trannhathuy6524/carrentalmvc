@using carrentalmvc.Models.Enums
@model IEnumerable<carrentalmvc.Models.Rental>
@{
    ViewData["Title"] = "Quản lý thuê xe";

    // Filters & pagination from ViewBag
    var searchTerm = ViewBag.SearchTerm as string ?? string.Empty;
    RentalStatus? filterStatus = ViewBag.Status as RentalStatus?;
    DateTime? filterStartDate = ViewBag.StartDate as DateTime?;
    DateTime? filterEndDate = ViewBag.EndDate as DateTime?;

    var pageNumber = ViewBag.PageNumber != null ? (int)ViewBag.PageNumber : 1;
    var totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
    var totalCount = ViewBag.TotalCount != null ? (int)ViewBag.TotalCount : Model.Count();

    var getRentalStatusText = ViewBag.GetRentalStatusText as Func<RentalStatus, string>;
    var getTotalDays = ViewBag.GetTotalDays as Func<DateTime, DateTime, int>;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-file-contract"></i> Quản lý thuê xe</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-download"></i> Xuất báo cáo
            </button>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="searchTerm">Tìm kiếm</label>
                        <input name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm theo tên xe, khách hàng, mã HĐ..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="status">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            @foreach (RentalStatus s in Enum.GetValues(typeof(RentalStatus)))
                            {
                                var val = (int)s;
                                var text = getRentalStatusText?.Invoke(s) ?? s.ToString();
                                if (filterStatus.HasValue && filterStatus.Value == s)
                                {
                                    <option value="@val" selected="selected">@text</option>
                                }
                                else
                                {
                                    <option value="@val">@text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="startDate">Từ ngày</label>
                        <input name="startDate" value="@(filterStartDate?.ToString("yyyy-MM-dd") ?? "")" class="form-control" type="date" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="endDate">Đến ngày</label>
                        <input name="endDate" value="@(filterEndDate?.ToString("yyyy-MM-dd") ?? "")" class="form-control" type="date" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Xóa bộ lọc
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Rentals List -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Danh sách hợp đồng thuê xe</h6>
            <span class="badge bg-primary">Tổng: @totalCount</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã HĐ</th>
                            <th>Thông tin xe</th>
                            <th>Khách hàng</th>
                            <th>Thời gian thuê</th>
                            <th>Giá trị HĐ</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rental in Model)
                        {
                            var carName = rental.Car?.Name ?? "N/A";
                            var brandName = rental.Car?.Brand?.Name ?? "";
                            var renterName = rental.Renter?.FullName ?? "N/A";
                            var carImageUrl = rental.Car?.CarImages?.FirstOrDefault(img => img.IsPrimary)?.ImageUrl;
                            var totalDays = (rental.EndDate - rental.StartDate).Days;

                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@rental.RentalId" class="fw-bold text-decoration-none">
                                        #@rental.RentalId
                                    </a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(carImageUrl))
                                        {
                                            <img src="@carImageUrl" alt="Car" class="rounded me-2" width="50" height="40" style="object-fit: cover;">
                                        }
                                        <div>
                                            <div class="fw-bold">@carName</div>
                                            <small class="text-muted">@brandName</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@renterName</div>
                                </td>
                                <td>
                                    <div>
                                        <small class="text-muted">Từ:</small> @rental.StartDate.ToString("dd/MM/yyyy")
                                    </div>
                                    <div>
                                        <small class="text-muted">Đến:</small> @rental.EndDate.ToString("dd/MM/yyyy")
                                    </div>
                                    <small class="badge bg-light text-dark">@totalDays ngày</small>
                                </td>
                                <td>
                                    <div class="fw-bold text-success">@rental.TotalPrice.ToString("N0") VNĐ</div>
                                    @if (rental.Deposit.HasValue)
                                    {
                                        <small class="text-muted">Cọc: @rental.Deposit.Value.ToString("N0") VNĐ</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(GetRentalStatusBadgeClass(rental.Status))">
                                        @(getRentalStatusText?.Invoke(rental.Status) ?? rental.Status.ToString())
                                    </span>
                                    @if (rental.Status == RentalStatus.Active && rental.EndDate < DateTime.Now)
                                    {
                                        <br />
                                        <span class="badge bg-danger mt-1">Quá hạn</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@rental.RentalId"
                                           class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (rental.Status == RentalStatus.Pending)
                                        {
                                            <form asp-action="Confirm" asp-route-id="@rental.RentalId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success" title="Xác nhận"
                                                        onclick="return confirm('Bạn có chắc muốn xác nhận hợp đồng này?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (rental.Status == RentalStatus.Confirmed)
                                        {
                                            <form asp-action="Start" asp-route-id="@rental.RentalId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-info" title="Bắt đầu thuê"
                                                        onclick="return confirm('Bạn có chắc muốn bắt đầu hợp đồng thuê này?')">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (rental.Status == RentalStatus.Active)
                                        {
                                            <a asp-action="Complete" asp-route-id="@rental.RentalId"
                                               class="btn btn-sm btn-warning" title="Hoàn thành">
                                                <i class="fas fa-flag-checkered"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Rentals pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber - 1)"
                                   asp-route-searchTerm="@searchTerm"
                                   asp-route-status="@((int?)filterStatus)"
                                   asp-route-startDate="@(filterStartDate?.ToString("yyyy-MM-dd"))"
                                   asp-route-endDate="@(filterEndDate?.ToString("yyyy-MM-dd"))">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i"
                                       asp-route-searchTerm="@searchTerm"
                                       asp-route-status="@((int?)filterStatus)"
                                       asp-route-startDate="@(filterStartDate?.ToString("yyyy-MM-dd"))"
                                       asp-route-endDate="@(filterEndDate?.ToString("yyyy-MM-dd"))">@i</a>
                                </li>
                            }

                            <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber + 1)"
                                   asp-route-searchTerm="@searchTerm"
                                   asp-route-status="@((int?)filterStatus)"
                                   asp-route-startDate="@(filterStartDate?.ToString("yyyy-MM-dd"))"
                                   asp-route-endDate="@(filterEndDate?.ToString("yyyy-MM-dd"))">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Không tìm thấy hợp đồng thuê nào</h5>
                <p class="text-muted">Thử thay đổi điều kiện tìm kiếm</p>
            </div>
        }
    </div>
</div>

@functions {
    private string GetRentalStatusBadgeClass(carrentalmvc.Models.Enums.RentalStatus status)
    {
        return status switch
        {
            carrentalmvc.Models.Enums.RentalStatus.Pending => "warning",
            carrentalmvc.Models.Enums.RentalStatus.Confirmed => "info",
            carrentalmvc.Models.Enums.RentalStatus.Active => "success",
            carrentalmvc.Models.Enums.RentalStatus.Completed => "primary",
            carrentalmvc.Models.Enums.RentalStatus.Cancelled => "danger",
            carrentalmvc.Models.Enums.RentalStatus.Overdue => "danger",
            _ => "secondary"
        };
    }
}