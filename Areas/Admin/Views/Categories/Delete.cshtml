@model carrentalmvc.Models.Category
@{
    ViewData["Title"] = $"Xóa loại xe - {Model.Name}";
    var carCount = ViewBag.CarCount != null ? (int)ViewBag.CarCount : (Model.Cars?.Count ?? 0);
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger"><i class="fas fa-trash"></i> Xóa loại xe</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group">
            <a asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-sm btn-outline-info">
                <i class="fas fa-eye"></i> Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa loại xe</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
                    <p>Bạn có chắc chắn muốn xóa loại xe <strong>"@Model.Name"</strong> không?</p>
                    <p class="mb-0">Hành động này không thể hoàn tác!</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Tên loại xe:</dt>
                    <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                    <dt class="col-sm-3">Mô tả:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <em class="text-muted">Chưa có mô tả</em>
                        }
                    </dd>

                    <dt class="col-sm-3">Số xe hiện tại:</dt>
                    <dd class="col-sm-9">
                        @if (carCount > 0)
                        {
                            <span class="badge bg-warning text-dark">@carCount xe</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">0 xe</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Ngày tạo:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>

                <form asp-action="Delete" asp-route-id="@Model.CategoryId" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <input asp-for="CategoryId" type="hidden" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Bạn có chắc chắn muốn xóa loại xe này?')">
                            <i class="fas fa-trash"></i> Xóa vĩnh viễn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        @if (carCount > 0)
        {
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Không thể xóa</h6>
                </div>
                <div class="card-body">
                    <p>Loại xe này hiện có <strong>@carCount</strong> xe đang sử dụng.</p>
                    <p>Bạn cần:</p>
                    <ol>
                        <li>Chuyển các xe sang loại khác</li>
                        <li>Hoặc xóa tất cả xe thuộc loại này</li>
                    </ol>
                    <a asp-area="Admin" asp-controller="Cars" asp-action="Index" asp-route-categoryId="@Model.CategoryId"
                       class="btn btn-warning">
                        <i class="fas fa-car"></i> Xem danh sách xe
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-check-circle"></i> Có thể xóa</h6>
                </div>
                <div class="card-body">
                    <p>Loại xe này chưa có xe nào sử dụng, bạn có thể xóa một cách an toàn.</p>
                </div>
            </div>
        }
    </div>
</div>