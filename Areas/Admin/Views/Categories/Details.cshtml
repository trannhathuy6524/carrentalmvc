@model carrentalmvc.Models.Category
@{
    ViewData["Title"] = $"Chi tiết loại xe - {Model.Name}";
    var carCount = ViewBag.CarCount != null ? (int)ViewBag.CarCount : (Model.Cars?.Count ?? 0);
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-th-large"></i> Chi tiết loại xe</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-sm btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-sm btn-danger">
                <i class="fas fa-trash"></i> Xóa
            </a>
        </div>
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">Thông tin chi tiết</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">#@Model.CategoryId</dd>

                    <dt class="col-sm-3">Tên loại xe:</dt>
                    <dd class="col-sm-9">
                        <h5 class="text-primary">@Model.Name</h5>
                    </dd>

                    <dt class="col-sm-3">Mô tả:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p>@Model.Description</p>
                        }
                        else
                        {
                            <em class="text-muted">Chưa có mô tả</em>
                        }
                    </dd>

                    <dt class="col-sm-3">Số lượng xe:</dt>
                    <dd class="col-sm-9">
                        @if (carCount > 0)
                        {
                            <span class="badge bg-success fs-6">@carCount xe</span>
                            <a asp-area="Admin" asp-controller="Cars" asp-action="Index" asp-route-categoryId="@Model.CategoryId"
                               class="btn btn-sm btn-outline-primary ms-2">
                                <i class="fas fa-eye"></i> Xem danh sách xe
                            </a>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">Chưa có xe nào</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Ngày tạo:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">Cập nhật lần cuối:</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">Thao tác nhanh</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-outline-warning">
                        <i class="fas fa-edit"></i> Chỉnh sửa thông tin
                    </a>

                    @if (carCount > 0)
                    {
                        <a asp-area="Admin" asp-controller="Cars" asp-action="Index" asp-route-categoryId="@Model.CategoryId"
                           class="btn btn-outline-primary">
                            <i class="fas fa-car"></i> Xem xe thuộc loại này
                        </a>
                    }

                    <hr>

                    <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Xóa loại xe
                    </a>
                </div>
            </div>
        </div>

        @if (carCount > 0)
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Thống kê</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        Loại xe này hiện có <strong>@carCount</strong> xe trong hệ thống.
                    </div>
                </div>
            </div>
        }
    </div>
</div>