@using carrentalmvc.Models
@using carrentalmvc.Models.Enums
@using carrentalmvc.Models.ViewModels
@model ApplicationUser
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/CarOwner/Views/Shared/_CarOwnerLayout.cshtml";

    // Get data from ViewBag
    var myCarsCount = ViewBag.MyCarsCount ?? 0;
    var availableCars = ViewBag.AvailableCars ?? 0;
    var carsInRental = ViewBag.CarsInRental ?? 0;
    var totalRentals = ViewBag.TotalRentals ?? 0;
    var activeRentals = ViewBag.ActiveRentals ?? 0;
    var monthlyIncome = ViewBag.MonthlyIncome ?? 0m;
    var averageRating = ViewBag.AverageRating ?? 0.0;
    var totalReviews = ViewBag.TotalReviews ?? 0;

    var monthlyIncomeChart = ViewBag.MonthlyIncomeChart as List<carrentalmvc.Areas.CarOwner.Controllers.MonthlyIncomeData> ?? new List<carrentalmvc.Areas.CarOwner.Controllers.MonthlyIncomeData>();
    var recentCars = ViewBag.RecentCars as List<Car> ?? new List<Car>();
    var recentRentals = ViewBag.RecentRentals as List<Rental> ?? new List<Rental>();

    // ✅ THÊM: Revenue breakdown stats
    var revenueStats = ViewBag.RevenueStats as OwnerRevenueStats ?? new OwnerRevenueStats();
    var monthlyRevenueBreakdown = ViewBag.MonthlyRevenueBreakdown as List<MonthlyRevenue> ?? new List<MonthlyRevenue>();

    var getCarStatusText = ViewBag.GetCarStatusText as Func<CarStatus, string>;
    var getRentalStatusText = ViewBag.GetRentalStatusText as Func<RentalStatus, string>;
}

<div class="page-header">
    <h1 class="page-title">Tổng quan Dashboard</h1>
    <p class="page-subtitle">Chào mừng trở lại, <strong>@Model.FullName</strong>! Đây là tổng quan về hoạt động kinh doanh của bạn.</p>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stats-card success position-relative">
            <div class="stats-icon">
                <i class="fas fa-car"></i>
            </div>
            <div class="stats-value">@myCarsCount</div>
            <div class="stats-label">Tổng số xe</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card primary position-relative">
            <div class="stats-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stats-value">@availableCars</div>
            <div class="stats-label">Xe sẵn sàng</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card warning position-relative">
            <div class="stats-icon">
                <i class="fas fa-handshake"></i>
            </div>
            <div class="stats-value">@activeRentals</div>
            <div class="stats-label">Đơn thuê đang hoạt động</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card info position-relative">
            <div class="stats-icon">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <div class="stats-value">@monthlyIncome.ToString("N0")</div>
            <div class="stats-label">Doanh thu tháng (VNĐ)</div>
        </div>
    </div>
</div>

@* ✅ THÊM: Revenue Breakdown Section *@
@if (revenueStats.CompletedRentals > 0)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Phân tích doanh thu chi tiết
                    </h3>
                    <p class="card-subtitle text-white-50 mb-0 mt-1">Từ @revenueStats.CompletedRentals đơn đã hoàn thành</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Revenue Breakdown Stats -->
                        <div class="col-lg-8">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 mb-3">
                                    <i class="fas fa-file-invoice-dollar text-primary me-2"></i>Tổng giá trị đơn:
                                </dt>
                                <dd class="col-sm-7 text-end mb-3">
                                    <strong class="fs-5">@revenueStats.TotalBookingValue.ToString("N0") VNĐ</strong>
                                </dd>

                                <dt class="col-sm-5 mb-2 ps-4 text-muted small">
                                    <i class="fas fa-car me-1"></i>Tiền thuê xe:
                                </dt>
                                <dd class="col-sm-7 text-end mb-2 small text-muted">
                                    @revenueStats.RentalRevenue.ToString("N0") VNĐ
                                </dd>

                                <dt class="col-sm-5 mb-2 ps-4 text-muted small">
                                    <i class="fas fa-shipping-fast me-1"></i>Phí giao xe:
                                </dt>
                                <dd class="col-sm-7 text-end mb-2 small text-muted">
                                    @revenueStats.DeliveryRevenue.ToString("N0") VNĐ
                                </dd>

                                <dt class="col-sm-5 mb-3 ps-4 text-warning">
                                    <i class="fas fa-user-tie me-1"></i>Phí tài xế:
                                </dt>
                                <dd class="col-sm-7 text-end mb-3 text-warning">
                                    -@revenueStats.DriverFees.ToString("N0") VNĐ
                                    <small class="d-block text-muted">(@revenueStats.DriverFeePercentage.ToString("F1")% - không thuộc bạn)</small>
                                </dd>

                                <dt class="col-sm-5 mb-3 text-danger">
                                    <i class="fas fa-percentage me-1"></i>Hoa hồng nền tảng:
                                </dt>
                                <dd class="col-sm-7 text-end mb-3 text-danger">
                                    -@revenueStats.PlatformCommission.ToString("N0") VNĐ
                                    <small class="d-block text-muted">(@(revenueStats.CommissionRate * 100)% phí dịch vụ)</small>
                                </dd>

                                <dt class="col-sm-5 border-top pt-3">
                                    <strong class="text-success">
                                        <i class="fas fa-hand-holding-usd me-2"></i>Bạn thực nhận:
                                    </strong>
                                </dt>
                                <dd class="col-sm-7 text-end border-top pt-3">
                                    <strong class="text-success fs-4">@revenueStats.NetRevenue.ToString("N0") VNĐ</strong>
                                    <small class="d-block text-muted">(@revenueStats.NetRevenuePercentage.ToString("F1")% tổng booking)</small>
                                </dd>
                            </dl>

                            <!-- Additional Stats -->
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="text-muted d-block">Doanh thu trung bình/đơn</small>
                                        <strong class="fs-5 text-primary">@revenueStats.AverageRevenuePerRental.ToString("N0") VNĐ</strong>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="text-muted d-block">Số đơn hoàn thành</small>
                                        <strong class="fs-5 text-success">@revenueStats.CompletedRentals đơn</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Visual Breakdown -->
                        <div class="col-lg-4">
                            <h6 class="text-center mb-3">Phân bổ doanh thu</h6>
                            <canvas id="revenueBreakdownChart" height="250"></canvas>
                            
                            <div class="mt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <i class="fas fa-circle text-success me-2"></i>
                                        <small>Bạn nhận</small>
                                    </div>
                                    <strong class="small">@revenueStats.NetRevenuePercentage.ToString("F1")%</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <i class="fas fa-circle text-warning me-2"></i>
                                        <small>Tài xế</small>
                                    </div>
                                    <strong class="small">@revenueStats.DriverFeePercentage.ToString("F1")%</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-circle text-danger me-2"></i>
                                        <small>Nền tảng</small>
                                    </div>
                                    <strong class="small">@revenueStats.CommissionPercentage.ToString("F1")%</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Info Alert -->
                    <div class="alert alert-info mb-0 mt-3">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Lưu ý:</strong> Hoa hồng 10% giúp duy trì nền tảng, cung cấp hỗ trợ 24/7, bảo hiểm và các dịch vụ khác.
                        Bạn nhận được hỗ trợ marketing, xử lý tranh chấp và đảm bảo an toàn giao dịch.
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <!-- Revenue Chart -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Doanh thu 6 tháng gần đây</h3>
                <p class="card-subtitle">Theo dõi xu hướng doanh thu của bạn</p>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="100"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thống kê nhanh</h3>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3 p-3 bg-light rounded">
                    <div>
                        <div class="h5 mb-0">@totalRentals</div>
                        <small class="text-muted">Tổng đơn thuê</small>
                    </div>
                    <div class="text-primary">
                        <i class="fas fa-file-contract fa-2x"></i>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3 p-3 bg-light rounded">
                    <div>
                        <div class="h5 mb-0">
                            @averageRating.ToString("F1")
                            <span class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= averageRating)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else if (i - 0.5 <= averageRating)
                                    {
                                        <i class="fas fa-star-half-alt"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                }
                            </span>
                        </div>
                        <small class="text-muted">Đánh giá trung bình (@totalReviews đánh giá)</small>
                    </div>
                    <div class="text-warning">
                        <i class="fas fa-star fa-2x"></i>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                    <div>
                        <div class="h5 mb-0">@carsInRental</div>
                        <small class="text-muted">Xe đang cho thuê</small>
                    </div>
                    <div class="text-info">
                        <i class="fas fa-car-side fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row mt-4">
    <!-- Recent Cars -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="card-title">Xe mới nhất</h3>
                    <p class="card-subtitle">Những chiếc xe được thêm gần đây</p>
                </div>
                <a href="@Url.Action("Index", "Cars")" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-list me-1"></i>Xem tất cả
                </a>
            </div>
            <div class="card-body">
                @if (recentCars.Any())
                {
                    @foreach (var car in recentCars)
                    {
                        var primaryImage = car.CarImages?.FirstOrDefault(img => img.IsPrimary);
                        var statusBadgeClass = car.Status switch
                        {
                            CarStatus.Available => "success",
                            CarStatus.Rented => "warning",
                            CarStatus.Maintenance => "danger",
                            CarStatus.PendingApproval => "secondary",
                            CarStatus.Reserved => "info",
                            _ => "secondary"
                        };

                        <div class="d-flex align-items-center mb-3 p-3 border rounded hover-shadow">
                            <div class="flex-shrink-0">
                                @if (primaryImage != null && !string.IsNullOrEmpty(primaryImage.ImageUrl))
                                {
                                    <img src="@primaryImage.ImageUrl" alt="@car.Name" class="rounded" width="60" height="45" style="object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 45px;">
                                        <i class="fas fa-car text-muted"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">
                                    <a href="@Url.Action("Details", "Cars", new { id = car.CarId })" class="text-decoration-none text-dark">
                                        @car.Name
                                    </a>
                                </h6>
                                <p class="mb-1 small text-muted">
                                    @(car.Brand?.Name ?? "N/A") - @(car.Category?.Name ?? "N/A")
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-success fw-bold">@car.PricePerDay.ToString("N0") VNĐ/ngày</span>
                                    <span class="badge bg-@statusBadgeClass">
                                        @(getCarStatusText != null ? getCarStatusText(car.Status) : car.Status.ToString())
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-car fa-3x mb-3"></i>
                        <p>Chưa có xe nào</p>
                        <a href="@Url.Action("Create", "Cars")" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Thêm xe đầu tiên
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Rentals -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="card-title">Đơn thuê gần đây</h3>
                    <p class="card-subtitle">Hoạt động thuê xe mới nhất</p>
                </div>
                <a href="@Url.Action("Index", "Rentals")" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-list me-1"></i>Xem tất cả
                </a>
            </div>
            <div class="card-body">
                @if (recentRentals.Any())
                {
                    @foreach (var rental in recentRentals)
                    {
                        var statusBadgeClass = rental.Status switch
                        {
                            RentalStatus.Pending => "warning",
                            RentalStatus.Confirmed => "info",
                            RentalStatus.Active => "success",
                            RentalStatus.Completed => "primary",
                            RentalStatus.Cancelled => "danger",
                            RentalStatus.Overdue => "danger",
                            _ => "secondary"
                        };

                        <div class="d-flex align-items-center mb-3 p-3 border rounded hover-shadow">
                            <div class="flex-shrink-0">
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 45px; height: 45px;">
                                    <i class="fas fa-handshake"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">
                                    <a href="@Url.Action("Details", "Rentals", new { id = rental.RentalId })" class="text-decoration-none text-dark">
                                        #@rental.RentalId - @(rental.Car?.Name ?? "N/A")
                                    </a>
                                </h6>
                                <p class="mb-1 small text-muted">
                                    Khách: @(rental.Renter?.FullName ?? "N/A")
                                </p>
                                <p class="mb-1 small text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    @rental.StartDate.ToString("dd/MM/yyyy") - @rental.EndDate.ToString("dd/MM/yyyy")
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-success fw-bold">@rental.TotalPrice.ToString("N0") VNĐ</span>
                                    <span class="badge bg-@statusBadgeClass">
                                        @(getRentalStatusText != null ? getRentalStatusText(rental.Status) : rental.Status.ToString())
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-handshake fa-3x mb-3"></i>
                        <p>Chưa có đơn thuê nào</p>
                        <small>Đơn thuê sẽ xuất hiện khi có khách hàng thuê xe của bạn</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Revenue Chart (Line)
            const ctx = document.getElementById('revenueChart');
            if (ctx) {
                const chartData = @Html.Raw(Json.Serialize(monthlyIncomeChart));

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: chartData.map(x => x.month),
                        datasets: [{
                            label: 'Doanh thu (VNĐ)',
                            data: chartData.map(x => x.income),
                            borderColor: '#2563eb',
                            backgroundColor: 'rgba(37, 99, 235, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            pointBackgroundColor: '#2563eb',
                            pointBorderColor: '#ffffff',
                            pointBorderWidth: 2,
                            pointRadius: 6,
                            pointHoverRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        // ✅ Disable animation để tránh flash
                        animation: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return 'Doanh thu: ' + new Intl.NumberFormat('vi-VN').format(context.parsed.y) + ' VNĐ';
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return new Intl.NumberFormat('vi-VN', {
                                            notation: 'compact',
                                            compactDisplay: 'short'
                                        }).format(value) + ' VNĐ';
                                    }
                                },
                                grid: {
                                    borderColor: '#e2e8f0',
                                    color: '#f1f5f9'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        elements: {
                            point: {
                                hoverRadius: 8
                            }
                        }
                    }
                });
            }

            // ✅ THÊM: Revenue Breakdown Pie Chart
            const breakdownCtx = document.getElementById('revenueBreakdownChart');
            if (breakdownCtx) {
                const revenueStats = @Html.Raw(Json.Serialize(revenueStats));

                new Chart(breakdownCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Bạn nhận', 'Tài xế', 'Nền tảng'],
                        datasets: [{
                            data: [
                                revenueStats.netRevenue,
                                revenueStats.driverFees,
                                revenueStats.platformCommission
                            ],
                            backgroundColor: [
                                '#10b981', // green
                                '#f59e0b', // amber
                                '#ef4444'  // red
                            ],
                            borderWidth: 2,
                            borderColor: '#ffffff'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        animation: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const label = context.label || '';
                                        const value = context.parsed || 0;
                                        const formatted = new Intl.NumberFormat('vi-VN').format(value);
                                        const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        const percentage = ((value / total) * 100).toFixed(1);
                                        return label + ': ' + formatted + ' VNĐ (' + percentage + '%)';
                                    }
                                }
                            }
                        }
                    }
                });
            }

            // Add hover effect to cards
            $('.hover-shadow').hover(
                function() {
                    $(this).addClass('shadow-sm');
                },
                function() {
                    $(this).removeClass('shadow-sm');
                }
            );
        });
    </script>
}

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-2px);
        }
</style>