@using carrentalmvc.Models
@using carrentalmvc.Models.Enums
@model List<Rental>
@{
    ViewData["Title"] = "Đơn thuê xe";

    // Get data from ViewBag
    var searchTerm = ViewBag.SearchTerm as string;
    var status = ViewBag.Status as RentalStatus?;
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
    var pageNumber = ViewBag.PageNumber ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalPages = ViewBag.TotalPages ?? 0;
    var hasPreviousPage = ViewBag.HasPreviousPage ?? false;
    var hasNextPage = ViewBag.HasNextPage ?? false;

    var getRentalStatusText = ViewBag.GetRentalStatusText as Func<RentalStatus, string>;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-file-contract"></i> Đơn thuê xe</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-filter"></i> Bộ lọc
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="?status=@RentalStatus.Pending">Chờ xác nhận</a></li>
                <li><a class="dropdown-item" href="?status=@RentalStatus.Confirmed">Đã xác nhận</a></li>
                <li><a class="dropdown-item" href="?status=@RentalStatus.Active">Đang thuê</a></li>
                <li><a class="dropdown-item" href="?status=@RentalStatus.Completed">Hoàn thành</a></li>
                <li><a class="dropdown-item" href="?status=@RentalStatus.Cancelled">Đã hủy</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="@Url.Action("Index")">Tất cả</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="searchTerm">Tìm kiếm</label>
                        <input name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm theo tên xe hoặc khách..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="status">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            <option value="@RentalStatus.Pending" selected="@(status == RentalStatus.Pending)">Chờ xác nhận</option>
                            <option value="@RentalStatus.Confirmed" selected="@(status == RentalStatus.Confirmed)">Đã xác nhận</option>
                            <option value="@RentalStatus.Active" selected="@(status == RentalStatus.Active)">Đang thuê</option>
                            <option value="@RentalStatus.Completed" selected="@(status == RentalStatus.Completed)">Hoàn thành</option>
                            <option value="@RentalStatus.Cancelled" selected="@(status == RentalStatus.Cancelled)">Đã hủy</option>
                            <option value="@RentalStatus.Overdue" selected="@(status == RentalStatus.Overdue)">Quá hạn</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="startDate">Ngày bắt đầu</label>
                        <input name="startDate" value="@startDate?.ToString("yyyy-MM-dd")" class="form-control" type="date" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="endDate">Ngày kết thúc</label>
                        <input name="endDate" value="@endDate?.ToString("yyyy-MM-dd")" class="form-control" type="date" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Rentals List -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Danh sách đơn thuê xe</h6>
            <span class="badge bg-primary">Tổng: @totalCount</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 100px;">Mã đơn</th>
                            <th>Xe & Khách hàng</th>
                            <th>Thời gian thuê</th>
                            <th>Giá trị</th>
                            <th>Trạng thái</th>
                            <th class="text-center" style="width: 200px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rental in Model)
                        {
                            var primaryImage = rental.Car?.CarImages?.FirstOrDefault(img => img.IsPrimary);
                            var totalDays = (rental.EndDate.Date - rental.StartDate.Date).Days;
                            var canConfirm = rental.Status == RentalStatus.Pending;
                            var canStart = rental.Status == RentalStatus.Confirmed;
                            var canComplete = rental.Status == RentalStatus.Active;
                            var canCancel = rental.Status == RentalStatus.Pending || rental.Status == RentalStatus.Confirmed;

                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@rental.RentalId" class="text-decoration-none">
                                        <strong>#@rental.RentalId</strong>
                                    </a>
                                    <br>
                                    <small class="text-muted">@rental.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (primaryImage != null && !string.IsNullOrEmpty(primaryImage.ImageUrl))
                                        {
                                            <img src="@primaryImage.ImageUrl" alt="Car" class="rounded me-2" width="50" height="40" style="object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" style="width: 50px; height: 40px;">
                                                <i class="fas fa-car text-muted"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@(rental.Car?.Name ?? "N/A")</div>
                                            <small class="text-muted">@(rental.Car?.Brand?.Name ?? "N/A")</small>
                                            <br>
                                            <small class="text-primary">@(rental.Renter?.FullName ?? "N/A")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <small class="text-muted">Từ:</small> @rental.StartDate.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                    <div>
                                        <small class="text-muted">Đến:</small> @rental.EndDate.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                    <small class="badge bg-light text-dark">@totalDays ngày</small>
                                    @if (rental.Status == RentalStatus.Active && rental.EndDate < DateTime.Now)
                                    {
                                        <br>
                                        <span class="badge bg-danger">Quá hạn</span>
                                    }
                                </td>
                                <td>
                                    <div class="fw-bold text-success">@rental.TotalPrice.ToString("N0") VNĐ</div>
                                    @if (rental.Deposit.HasValue && rental.Deposit > 0)
                                    {
                                        <small class="text-muted">Cọc: @rental.Deposit.Value.ToString("N0") VNĐ</small>
                                    }
                                    @if (rental.LateFee.HasValue && rental.LateFee > 0)
                                    {
                                        <br>
                                        <small class="text-danger">Phí trễ: @rental.LateFee.Value.ToString("N0") VNĐ</small>
                                    }
                                    @if (rental.DamageFee.HasValue && rental.DamageFee > 0)
                                    {
                                        <br>
                                        <small class="text-warning">Phí hỏng: @rental.DamageFee.Value.ToString("N0") VNĐ</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(GetRentalStatusBadgeClass(rental.Status))">
                                        @(getRentalStatusText != null ? getRentalStatusText(rental.Status) : rental.Status.ToString())
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@rental.RentalId"
                                           class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (canConfirm)
                                        {
                                            <form asp-action="Confirm" asp-route-id="@rental.RentalId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success" title="Xác nhận"
                                                        onclick="return confirm('Bạn có chắc muốn xác nhận đơn thuê này?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (canStart)
                                        {
                                            <form asp-action="Start" asp-route-id="@rental.RentalId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-info" title="Bắt đầu thuê"
                                                        onclick="return confirm('Bạn có chắc muốn bắt đầu đơn thuê này?')">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (canComplete)
                                        {
                                            <a asp-action="Complete" asp-route-id="@rental.RentalId"
                                               class="btn btn-sm btn-primary" title="Hoàn thành">
                                                <i class="fas fa-flag-checkered"></i>
                                            </a>
                                        }

                                        @if (canCancel)
                                        {
                                            <button type="button" class="btn btn-sm btn-danger" title="Hủy"
                                                    onclick="cancelRental(@rental.RentalId)">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="d-flex justify-content-center mt-3 mb-3">
                    <nav aria-label="Rental pagination">
                        <ul class="pagination">
                            <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber - 1)"
                                   asp-route-searchTerm="@searchTerm"
                                   asp-route-status="@status"
                                   asp-route-startDate="@startDate?.ToString("yyyy-MM-dd")"
                                   asp-route-endDate="@endDate?.ToString("yyyy-MM-dd")">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i"
                                       asp-route-searchTerm="@searchTerm"
                                       asp-route-status="@status"
                                       asp-route-startDate="@startDate?.ToString("yyyy-MM-dd")"
                                       asp-route-endDate="@endDate?.ToString("yyyy-MM-dd")">@i</a>
                                </li>
                            }

                            <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                <a class="page-link" asp-route-page="@(pageNumber + 1)"
                                   asp-route-searchTerm="@searchTerm"
                                   asp-route-status="@status"
                                   asp-route-startDate="@startDate?.ToString("yyyy-MM-dd")"
                                   asp-route-endDate="@endDate?.ToString("yyyy-MM-dd")">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có đơn thuê xe nào</h5>
                <p class="text-muted">Khách hàng sẽ gửi yêu cầu thuê xe của bạn và hiển thị ở đây</p>
            </div>
        }
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hủy đơn thuê xe</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="cancelForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="cancelReason" class="form-label">Lý do hủy:</label>
                        <textarea class="form-control" id="cancelReason" name="reason" rows="3"
                                  placeholder="Nhập lý do hủy đơn thuê xe..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Xác nhận hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelRental(rentalId) {
            const form = document.getElementById('cancelForm');
            form.action = '@Url.Action("Cancel", new { id = "" })'.replace('id=', 'id=' + rentalId);

            const modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            modal.show();
        }
    </script>
}

@functions {
    private string GetRentalStatusBadgeClass(RentalStatus status)
    {
        return status switch
        {
            RentalStatus.Pending => "warning",
            RentalStatus.Confirmed => "info",
            RentalStatus.Active => "success",
            RentalStatus.Completed => "primary",
            RentalStatus.Cancelled => "danger",
            RentalStatus.Overdue => "danger",
            _ => "secondary"
        };
    }
}