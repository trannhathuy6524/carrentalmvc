@model IEnumerable<Car>

@{
    ViewData["Title"] = "Danh sách xe";
    var searchTerm = ViewBag.SearchTerm as string;
    var brandId = ViewBag.BrandId as int?;
    var categoryId = ViewBag.CategoryId as int?;
    var brands = ViewBag.Brands as List<Brand> ?? new List<Brand>();
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Danh sách xe</h1>
            <p class="text-muted mb-0">Xem thông tin tất cả xe trong hệ thống</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Tìm kiếm</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           value="@searchTerm" placeholder="Tên xe, biển số...">
                </div>
                <div class="col-md-3">
                    <label for="brandId" class="form-label">Hãng xe</label>
                    <select class="form-select" id="brandId" name="brandId">
                        <option value="">Tất cả</option>
                        @foreach (var brand in brands)
                        {
                            <option value="@brand.BrandId" selected="@(brand.BrandId == brandId)">@brand.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="categoryId" class="form-label">Loại xe</label>
                    <select class="form-select" id="categoryId" name="categoryId">
                        <option value="">Tất cả</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.CategoryId" selected="@(category.CategoryId == categoryId)">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Cars List -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Tìm thấy @Model.Count() xe
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Tên xe</th>
                                <th>Biển số</th>
                                <th>Hãng</th>
                                <th>Loại</th>
                                <th>Chủ xe</th>
                                <th>Giá thuê/ngày</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in Model)
                            {
                                var primaryImage = car.CarImages?.FirstOrDefault(img => img.IsPrimary);
                                <tr>
                                    <td>
                                        @if (primaryImage != null)
                                        {
                                            <img src="@primaryImage.ImageUrl" alt="@car.Name" 
                                                 class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center" 
                                                 style="width: 80px; height: 60px;">
                                                <i class="fas fa-car text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td><strong>@car.Name</strong></td>
                                    <td>@car.LicensePlate</td>
                                    <td>@car.Brand?.Name</td>
                                    <td>@car.Category?.Name</td>
                                    <td>@car.Owner?.FullName</td>
                                    <td>@car.PricePerDay.ToString("N0") VNĐ</td>
                                    <td>
                                        @switch (car.Status)
                                        {
                                            case CarStatus.Available:
                                                <span class="badge bg-success">Sẵn sàng</span>
                                                break;
                                            case CarStatus.Rented:
                                                <span class="badge bg-warning">Đang thuê</span>
                                                break;
                                            case CarStatus.Maintenance:
                                                <span class="badge bg-danger">Bảo trì</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@car.CarId" 
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-car fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không tìm thấy xe nào</p>
                </div>
            }
        </div>
    </div>
</div>
