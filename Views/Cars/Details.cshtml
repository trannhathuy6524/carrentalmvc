@using carrentalmvc.Models
@using carrentalmvc.Models.Enums
@model Car
@{
    ViewData["Title"] = $"Chi tiết xe - {Model.Name}";

    // Get data from ViewBag
    var reviews = ViewBag.Reviews as List<Review> ?? new List<Review>();
    var averageRating = (double)(ViewBag.AverageRating ?? 0.0);
    var reviewCount = (int)(ViewBag.ReviewCount ?? 0);
    var ratingDistribution = ViewBag.RatingDistribution as Dictionary<int, int> ?? new Dictionary<int, int>();
    var relatedCars = ViewBag.RelatedCars as List<Car> ?? new List<Car>();
    var imageUrls = ViewBag.ImageUrls as List<string> ?? new List<string>();
    var features = ViewBag.Features as List<Feature> ?? new List<Feature>();

    var getTransmissionText = ViewBag.GetTransmissionText as Func<Transmission?, string?>;
    var getFuelTypeText = ViewBag.GetFuelTypeText as Func<FuelType?, string?>;
    var getCarStatusText = ViewBag.GetCarStatusText as Func<CarStatus, string>;

    var isAuthenticated = (bool)(ViewBag.IsAuthenticated ?? false);
    var canRent = (bool)(ViewBag.CanRent ?? false);
    var showLoginPrompt = (bool)(ViewBag.ShowLoginPrompt ?? true);
}

<div class="car-details-public-page">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Danh sách xe</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <!-- Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h2"><i class="fas fa-car"></i> Chi tiết xe</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <!-- Left Column: Images & Features -->
        <div class="col-lg-7">
            <!-- Car Images -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-images me-2"></i>Hình ảnh xe</h5>
                </div>
                <div class="card-body p-0">
                    @if (imageUrls.Any())
                    {
                        <div id="carImageCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @for (int i = 0; i < imageUrls.Count; i++)
                                {
                                    <button type="button" data-bs-target="#carImageCarousel" data-bs-slide-to="@i"
                                            class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")"></button>
                                }
                            </div>
                            <div class="carousel-inner">
                                @for (int i = 0; i < imageUrls.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@imageUrls[i]" class="d-block w-100" alt="@Model.Name"
                                             style="height: 450px; object-fit: cover;">
                                    </div>
                                }
                            </div>
                            @if (imageUrls.Count > 1)
                            {
                                <button class="carousel-control-prev" type="button" data-bs-target="#carImageCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carImageCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 450px;">
                            <div class="text-center text-muted">
                                <i class="fas fa-car fa-5x mb-3"></i>
                                <p>Chưa có hình ảnh</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Car Specifications -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Thông số kỹ thuật</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @if (Model.Year > 0)
                        {
                            <div class="col-md-6">
                                <div class="spec-item">
                                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                                    <strong>Năm sản xuất:</strong> @Model.Year
                                </div>
                            </div>
                        }

                        @if (Model.Seats.HasValue && Model.Seats > 0)
                        {
                            <div class="col-md-6">
                                <div class="spec-item">
                                    <i class="fas fa-users text-primary me-2"></i>
                                    <strong>Số chỗ ngồi:</strong> @Model.Seats chỗ
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <div class="col-md-6">
                                <div class="spec-item">
                                    <i class="fas fa-palette text-primary me-2"></i>
                                    <strong>Màu sắc:</strong> @Model.Color
                                </div>
                            </div>
                        }

                        @if (Model.Transmission.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="spec-item">
                                    <i class="fas fa-cog text-primary me-2"></i>
                                    <strong>Hộp số:</strong> @(getTransmissionText != null ? getTransmissionText(Model.Transmission) : Model.Transmission.ToString())
                                </div>
                            </div>
                        }

                        @if (Model.FuelType.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="spec-item">
                                    <i class="fas fa-gas-pump text-primary me-2"></i>
                                    <strong>Nhiên liệu:</strong> @(getFuelTypeText != null ? getFuelTypeText(Model.FuelType) : Model.FuelType.ToString())
                                </div>
                            </div>
                        }

                        @if (Model.FuelConsumption.HasValue && Model.FuelConsumption > 0)
                        {
                            <div class="col-md-6">
                                <div class="spec-item">
                                    <i class="fas fa-tachometer-alt text-primary me-2"></i>
                                    <strong>Tiêu thụ:</strong> @Model.FuelConsumption.Value.ToString("F1") L/100km
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.LicensePlate))
                        {
                            <div class="col-md-6">
                                <div class="spec-item">
                                    <i class="fas fa-id-card text-primary me-2"></i>
                                    <strong>Biển số:</strong> <span class="badge bg-dark">@Model.LicensePlate</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Car Features -->
            @if (features.Any())
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>Tính năng nổi bật</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            @foreach (var feature in features)
                            {
                                <div class="col-md-6">
                                    <div class="feature-badge">
                                        <i class="@(feature.Icon ?? "fas fa-check") text-primary me-2"></i>
                                        <span>@feature.Name</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Mô tả chi tiết</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Description</p>
                    </div>
                </div>
            }

            <!-- Reviews Section -->
            @if (reviews.Any())
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Đánh giá từ khách hàng</h5>
                    </div>
                    <div class="card-body">
                        <!-- Rating Summary -->
                        <div class="rating-summary mb-4">
                            <div class="row">
                                <div class="col-md-4 text-center border-end">
                                    <div class="average-rating">
                                        <h2 class="display-4 mb-0">@averageRating.ToString("F1")</h2>
                                        <div class="rating-stars mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= averageRating ? "text-warning" : "text-muted")"></i>
                                            }
                                        </div>
                                        <small class="text-muted">@reviewCount đánh giá</small>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="rating-distribution">
                                        @for (int star = 5; star >= 1; star--)
                                        {
                                            var count = ratingDistribution.ContainsKey(star) ? ratingDistribution[star] : 0;
                                            var percentage = reviewCount > 0 ? (count * 100.0 / reviewCount) : 0;
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="me-2">@star <i class="fas fa-star text-warning small"></i></span>
                                                <div class="progress flex-grow-1 me-2" style="height: 8px;">
                                                    <div class="progress-bar bg-warning" role="progressbar"
                                                         style="width: @percentage.ToString("F0")%"
                                                         aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <span class="text-muted small">@count</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Review List -->
                        <div class="review-list">
                            @foreach (var review in reviews.Take(3))
                            {
                                <div class="review-item border-bottom pb-3 mb-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <div>
                                            <strong>@(review.User?.FullName ?? "Người dùng")</strong>
                                            <div class="rating-stars small">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                                }
                                            </div>
                                        </div>
                                        <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(review.Comment))
                                    {
                                        <p class="mb-1">@review.Comment</p>
                                    }
                                    @if (review.IsRecommended)
                                    {
                                        <span class="badge bg-success small">
                                            <i class="fas fa-thumbs-up"></i> Đề xuất
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Booking & Info -->
        <div class="col-lg-5">
            <!-- Car Info Card -->
            <div class="card mb-4 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h3 class="card-title mb-3">@Model.Name</h3>

                    <div class="mb-3">
                        <span class="badge bg-primary me-2">@(Model.Brand?.Name ?? "N/A")</span>
                        <span class="badge bg-secondary me-2">@(Model.Category?.Name ?? "N/A")</span>
                        <span class="badge bg-@(GetCarStatusBadgeClass(Model.Status))">
                            @(getCarStatusText != null ? getCarStatusText(Model.Status) : Model.Status.ToString())
                        </span>
                    </div>

                    @* ✅ Warning for Rented Cars *@
                    @if (Model.Status == CarStatus.Rented)
                    {
                        <div class="alert alert-warning mb-3">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-info-circle me-2 mt-1"></i>
                                <div>
                                    <strong>Xe đang được thuê</strong>
                                    <p class="mb-0 small">
                                        Bạn có thể đặt trước cho các ngày sau khi xe trống lịch. 
                                        Vui lòng chọn ngày thuê trong tương lai.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    @if (reviewCount > 0)
                    {
                        <div class="mb-3">
                            <div class="rating-stars">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= averageRating ? "text-warning" : "text-muted")"></i>
                                }
                            </div>
                            <span class="text-muted small">(@reviewCount đánh giá)</span>
                        </div>
                    }

                    <!-- Pricing -->
                    <div class="pricing-section mb-4">
                        <div class="row text-center">
                            <div class="col-6 border-end">
                                <h4 class="text-success mb-0">@Model.PricePerDay.ToString("N0")</h4>
                                <small class="text-muted">VNĐ/ngày</small>
                            </div>
                            <div class="col-6">
                                @if (Model.PricePerHour.HasValue && Model.PricePerHour > 0)
                                {
                                    <h4 class="text-info mb-0">@Model.PricePerHour.Value.ToString("N0")</h4>
                                    <small class="text-muted">VNĐ/giờ</small>
                                }
                                else
                                {
                                    <h4 class="text-muted mb-0">-</h4>
                                    <small class="text-muted">VNĐ/giờ</small>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Owner Info -->
                    <div class="owner-info mb-4 p-3 bg-light rounded">
                        <h6 class="mb-2"><i class="fas fa-user me-2"></i>Chủ xe</h6>
                        <p class="mb-1"><strong>@(Model.Owner?.FullName ?? "N/A")</strong></p>
                        @if (!string.IsNullOrEmpty(Model.Owner?.PhoneNumber))
                        {
                            <p class="mb-0">
                                <i class="fas fa-phone me-2"></i>
                                <a href="tel:@Model.Owner.PhoneNumber">@Model.Owner.PhoneNumber</a>
                            </p>
                        }
                    </div>

                    <!-- Booking Actions -->
                    @if (Model.Status == CarStatus.Rented)
                    {
                        @* ✅ Button "Đặt trước" for rented cars *@
                        @if (canRent && Model.IsActive)
                        {
                            <a asp-area="Customer" asp-controller="Rentals" asp-action="Create" asp-route-carId="@Model.CarId"
                               class="btn btn-warning btn-lg w-100 mb-2">
                                <i class="fas fa-calendar-alt me-2"></i>Đặt trước cho ngày sau
                            </a>
                        }
                        else if (showLoginPrompt)
                        {
                            <a asp-controller="Home" asp-action="Login" class="btn btn-warning btn-lg w-100 mb-2">
                                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập để đặt trước
                            </a>
                            <a asp-controller="Home" asp-action="Register" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-user-plus me-2"></i>Đăng ký tài khoản
                            </a>
                        }
                    }
                    else if (canRent && Model.Status == CarStatus.Available && Model.IsActive)
                    {
                        <a asp-area="Customer" asp-controller="Rentals" asp-action="Create" asp-route-carId="@Model.CarId"
                           class="btn btn-primary btn-lg w-100 mb-2">
                            <i class="fas fa-calendar-check me-2"></i>Đặt thuê ngay
                        </a>
                    }
                    else if (showLoginPrompt)
                    {
                        <a asp-controller="Home" asp-action="Login" class="btn btn-primary btn-lg w-100 mb-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập để thuê xe
                        </a>
                        <a asp-controller="Home" asp-action="Register" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-user-plus me-2"></i>Đăng ký tài khoản
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg w-100" disabled>
                            <i class="fas fa-ban me-2"></i>Xe không khả dụng
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Cars -->
    @if (relatedCars.Any())
    {
        <div class="related-cars-section mt-5">
            <h4 class="mb-4"><i class="fas fa-car me-2"></i>Xe tương tự</h4>
            <div class="row">
                @foreach (var relatedCar in relatedCars)
                {
                    var relatedPrimaryImage = relatedCar.CarImages?.FirstOrDefault(img => img.IsPrimary);
                    var relatedImageUrl = relatedPrimaryImage?.ImageUrl ?? relatedCar.CarImages?.FirstOrDefault()?.ImageUrl;

                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card h-100 shadow-sm car-card">
                            <a asp-action="Details" asp-route-id="@relatedCar.CarId" class="text-decoration-none">
                                @if (!string.IsNullOrEmpty(relatedImageUrl))
                                {
                                    <img src="@relatedImageUrl" class="card-img-top" alt="@relatedCar.Name"
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-car fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h6 class="card-title text-dark">@relatedCar.Name</h6>
                                    <p class="card-text text-muted small mb-2">
                                        @(relatedCar.Brand?.Name ?? "N/A")
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-success fw-bold">@relatedCar.PricePerDay.ToString("N0") VNĐ</span>
                                        <small class="text-muted">/ngày</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .car-details-public-page {
        margin-bottom: 40px;
    }

    .spec-item {
        padding: 8px;
        border-radius: 5px;
        background: #f8f9fa;
    }

    .feature-badge {
        padding: 10px;
        background: #f8f9fa;
        border-radius: 5px;
        border-left: 3px solid #007bff;
    }

    .rating-stars i {
        font-size: 1.2rem;
    }

    .rating-stars.small i {
        font-size: 0.9rem;
    }

    .average-rating h2 {
        color: #ffc107;
        font-weight: bold;
    }

    .pricing-section {
        padding: 20px;
        background: #f8f9fa;
        border-radius: 10px;
    }

    .owner-info {
        border-left: 4px solid #007bff;
    }

    .car-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .car-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
        }

    .review-item:last-child {
        border-bottom: none !important;
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    .sticky-top {
        position: sticky;
        z-index: 1020;
    }
</style>

@functions {
    private string GetCarStatusBadgeClass(CarStatus status)
    {
        return status switch
        {
            CarStatus.Available => "success",
            CarStatus.Rented => "warning",
            CarStatus.Maintenance => "danger",
            CarStatus.PendingApproval => "secondary",
            CarStatus.Reserved => "info",
            _ => "secondary"
        };
    }
}